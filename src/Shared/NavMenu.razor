@inject IStringLocalizer<Common> Localizer

<MudPaper Elevation="0">
    <MudNavMenu Margin="Margin.Normal" Color="Color.Info">
        <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">
            @Localizer["Dashboard"]
        </MudNavLink>
        <MudNavLink Href="members" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.PeopleAlt">
            @Localizer["Members"]
        </MudNavLink>
        <MudNavLink Href="groups" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.GroupWork">
            @Localizer["Groups"]
        </MudNavLink>
        <MudNavLink Href="uploadMembers" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.CloudUpload">
            @Localizer["Upload"]
        </MudNavLink>
        <MudNavLink Href="statistics" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.QueryStats">
            @Localizer["Statistics"]
        </MudNavLink>
        <AuthorizeView Roles="@Roles.Admin">
            <MudNavLink Href="accounts" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.ManageAccounts">
                @Localizer["Accounts"]
            </MudNavLink>
        </AuthorizeView>
    </MudNavMenu>
</MudPaper>

